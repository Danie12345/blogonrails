<%= form_with model: post, url: user_posts_path, method: :post, local: true, scope: :post do |f| %>
  <div>
    <div>
      <%= f.label "Title:" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label "Content:" %>
      <%= f.text_field :text %>
    </div>
    <div>
      <%= f.submit 'Post!' %>
    </div>
  </div>
<% end %>