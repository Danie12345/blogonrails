<%= link_to :back do %>
  <i class="fa-solid fa-arrow-left-long"></i>
<% end %>
<%= form_with model: post, url: user_posts_path, method: :post, local: true, scope: :post do |f| %>
  <div>
    <div>
      <%= f.label "Title:" %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label "Content:" %>
      <%= f.text_area :text %>
    </div>
    <div>
      <%= f.submit 'Post!' %>
    </div>
  </div>
<% end %>