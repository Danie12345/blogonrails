<%= link_to user_posts_path(user_id: @user.id), :action => 'go' do %>
  <i class="fa-solid fa-arrow-left-long"></i>
<% end %>
<div class="full-post">
  <div class="post-top">
    <div class="post-data">
      <span class="post-title">Post # <%= @post.id %> by <%= @user.name %> </span>
      <span class="post-stats">
        <span class="post-comments-counter">Comments <%= @post.comments_counter %> </span>
        <span class="post-likes-counter">Likes <%= @post.likes_counter %> </span>
      </span>
    </div>
    <div class="post-text">
      <%= @post.text %>
    </div>
  </div>
  <div class="full-comments">
    <%= render "shared/comments_preview", comments: @post.comments %>
    <%= render "shared/comment_create" %>
  </div>
</div>
<%= render "shared/post_create", user: @client %>